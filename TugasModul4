class MoneyChanger():


    def money_changer_non_return(name):
        while True:
            currency = input("Masukkan jenis mata uang Anda (USD/IDR): ")
            if currency == "USD":
                amount = float(input("Masukkan jumlah uang Anda dalam dollar: "))
                exchange_rate = 14480
                converted_amount = amount * exchange_rate
                print(f"{name}, jumlah uang Anda dalam rupiah adalah: {converted_amount:.2f}")
                break
            elif currency == "IDR":
                amount = float(input("Masukkan jumlah uang Anda dalam rupiah: "))
                exchange_rate = 1/14480
                converted_amount = amount * exchange_rate
                print(f"{name}, jumlah uang Anda dalam dollar adalah: {converted_amount:.2f}")
                break
            else:
                print("Jenis mata uang yang dimasukkan tidak valid. Silakan coba lagi.")

    
    def money_changer_return(currency, amount):
        exchange_rate = 14480 if currency == "USD" else 1/14480
        converted_amount = amount * exchange_rate
        return converted_amount

   
    def get_name():
        return input("Masukkan nama Anda: ")

    while True:
        name = get_name()
        money_changer_non_return(name)
        answer = input("Apakah Anda ingin melakukan konversi mata uang lagi? (y/n): ")
        if answer.lower() != "y":
            print("Terima kasih telah menggunakan layanan kami.")
            break
